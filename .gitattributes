*.exe filter=lfs diff=lfs merge=lfs -text
*.rar filter=lfs diff=lfs merge=lfs -text

# Force languages detection
*.js linguist-language=JavaScript
*.json linguist-language=JavaScript
*.ts linguist-language=TypeScript
*.kt linguist-language=Kotlin

# Ensure detectable
*.js linguist-detectable=true
src/**/*.js linguist-detectable=true
app/**/*.js linguist-detectable=true

# Mark large or generated files as vendored/ignored
node_modules/** linguist-vendored
dist/** linguist-vendored
build/** linguist-vendored
*.html linguist-vendored
*.css linguist-vendored

# Explicitly ignore APK output
*.apk linguist-detectable=false
