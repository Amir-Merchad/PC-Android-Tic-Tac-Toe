*.exe filter=lfs diff=lfs merge=lfs -text
*.rar filter=lfs diff=lfs merge=lfs -text

# ✅ Ensure all languages are counted
*.js linguist-language=JavaScript
*.ts linguist-language=TypeScript
*.json linguist-language=JavaScript
*.kt linguist-language=Kotlin
*.css linguist-language=CSS
*.html linguist-language=HTML

# ✅ Ensure detection
*.js linguist-detectable=true
*.kt linguist-detectable=true
*.html linguist-detectable=true
*.css linguist-detectable=true

# ✅ Exclude third-party and build junk
node_modules/** linguist-vendored
dist/** linguist-vendored
build/** linguist-vendored
out/** linguist-vendored
.gradle/** linguist-vendored

# ✅ Don’t include binaries
*.apk linguist-detectable=true

